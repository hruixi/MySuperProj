<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rui.com.crashlog">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <!-- 应用程序能够使用OpenGL ES 2.0的API -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <!-- 应用程序需要使用纹理压缩，需要声明应用程序需要支持哪种压缩格式，以便他们安装在兼容的设备上 -->
    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <application
        android:name=".Application.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NShape_Activity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.Bezier_Curves_Activity"
            android:label="@string/title_activity_bezier__curves_"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.TestOkhttp" />
        <activity android:name=".activity.TcpSocket_Activity" />
        <activity android:name=".activity.TestConstraintLayoutActivity" />
        <activity android:name=".activity.VideoViewActivity" />
        <activity
            android:name=".activity.TestCamera2Activity"
            >
        </activity>
        <activity android:name=".activity.MediaRecorderTest"></activity>
    </application>

    <!-- 设置软键盘不遮挡界面上的输入框
     android:windowSoftInputMode="stateAlwaysHidden|adjustPan"  -->
    <!-- 设置屏幕尺寸改动时，不会出现调用onCreate()
     android:configChanges="screenSize|fontScale|orientation"  -->
</manifest>